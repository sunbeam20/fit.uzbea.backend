generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Permission model
model Permissions {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?

  rolePermissions RolePermissions[]
}

// Role Permissions Junction
model RolePermissions {
  id            Int     @id @default(autoincrement())
  role_id       Int
  permission_id Int
  can_view      Boolean @default(false)
  can_create    Boolean @default(false)
  can_edit      Boolean @default(false)
  can_delete    Boolean @default(false)

  Roles       Roles       @relation(fields: [role_id], references: [id])
  Permissions Permissions @relation(fields: [permission_id], references: [id])

  @@unique([role_id, permission_id])
}

// Roles model
model Roles {
  id   Int    @id @default(autoincrement())
  name String @unique

  Users           Users[]
  rolePermissions RolePermissions[]
}

// Session model
model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  user      Users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Users model with enum
model Users {
  id                  Int      @id @default(autoincrement())
  userId              String   @unique
  name                String
  email               String   @unique
  password            String
  status              Status   @default(Active)
  role_id             Int
  phone               String?
  address             String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  permissionOverrides Json?

  Roles           Roles?            @relation(fields: [role_id], references: [id])
  Session         Session[]
  Sales           Sales[]
  SalesReturn     SalesReturn[]
  Exchanges       Exchanges[]
  Purchases       Purchases[]
  PurchasesReturn PurchasesReturn[]
  Services        Services[]
  createdProducts Products[]        @relation("ProductCreator")
  updatedProducts Products[]        @relation("ProductUpdater")
  expenses        Expenses[]
}

enum Status {
  Active
  Inactive
}

// Customers model
model Customers {
  id      Int     @id @default(autoincrement())
  custId  String  @unique
  name    String
  email   String? @unique
  phone   String
  address String?

  Sales       Sales[]
  SalesReturn SalesReturn[]
  Exchanges   Exchanges[]
  Services    Services[]
}

// Suppliers model
model Suppliers {
  id      Int     @id @default(autoincrement())
  suppId  String  @unique
  name    String
  email   String? @unique
  phone   String
  address String?

  Purchases       Purchases[]
  PurchasesReturn PurchasesReturn[]
  products        Products[]
}

// Categories model
model Categories {
  id   Int    @id @default(autoincrement())
  name String @unique

  Products Products[]
}

// Products model and related models with enums
model Products {
  id                   Int           @id @default(autoincrement())
  productCode          String        @unique
  name                 String
  specification        String?
  description          String?
  quantity             Int
  purchasePrice        Decimal
  wholesalePrice       Decimal
  retailPrice          Decimal
  useIndividualSerials Boolean       @default(false)
  productType          ProductType   @default(New)
  status               ProductStatus @default(Active)
  category_id          Int
  supplier_id          Int?
  created_by           Int? // NEW: Who created the product
  updated_by           Int? // NEW: Who last updated the product
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @default(now())

  Categories Categories? @relation(fields: [category_id], references: [id])
  supplier   Suppliers?  @relation(fields: [supplier_id], references: [id])
  creator    Users?      @relation("ProductCreator", fields: [created_by], references: [id])
  updater    Users?      @relation("ProductUpdater", fields: [updated_by], references: [id])

  SalesItems           SalesItems[]
  SalesReturnItems     SalesReturnItems[]
  exchangeItemsOld     ExchangesItems[]       @relation("OldProductExchangeItems")
  exchangeItemsNew     ExchangesItems[]       @relation("NewProductExchangeItems")
  PurchasesItems       PurchasesItems[]
  PurchasesReturnItems PurchasesReturnItems[]
  productSerials       ProductSerials[]
}

enum ProductStatus {
  Active
  Unavailable
  Discontinued
}

enum ProductType {
  New
  PreOwned
}

model ProductSerials {
  id         Int          @id @default(autoincrement())
  serial     String       @unique
  product_id Int
  status     SerialStatus @default(Available)
  warranty   Warranty     @default(No)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  Products                  Products?                   @relation(fields: [product_id], references: [id])
  SalesItemSerials          SalesItemSerials[]
  salesReturnItemSerials    SalesReturnItemSerials[]
  purchaseItemSerials       PurchaseItemSerials[]
  purchaseReturnItemSerials PurchaseReturnItemSerials[]
  salesReturnItems          SalesReturnItems[]
  exchangeItemSerialsOld    ExchangeItemSerials[]       @relation("OldProductSerials")
  exchangeItemSerialsNew    ExchangeItemSerials[]       @relation("NewProductSerials")
}

enum SerialStatus {
  Available // In stock
  Sold // Sold to customer
  Returned // Returned by customer
  Unavailable // Not available for sale
  InService // Being repaired
  Exchanged // Exchanged for another product
}

enum Warranty {
  Yes
  No
}

// Expenses model
model Expenses {
  id          Int      @id @default(autoincrement())
  expenseNo   String   @unique
  title       String
  amount      Decimal
  date        DateTime @default(now())
  description String?
  user_id     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  Users Users @relation(fields: [user_id], references: [id])
}

// Sales and related models
model Sales {
  id            Int       @id @default(autoincrement())
  saleNo        String    @unique
  totalAmount   Decimal
  totalPaid     Decimal
  totaldiscount Decimal?
  dueDate       DateTime?
  status        String
  customer_id   Int?
  user_id       Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now())

  Customers Customers? @relation(fields: [customer_id], references: [id])
  Users     Users?     @relation(fields: [user_id], references: [id])

  SalesItems  SalesItems[]
  SalesReturn SalesReturn[]
  Exchanges   Exchanges[]
}

model SalesItems {
  id         Int      @id @default(autoincrement())
  quantity   Int
  unitPrice  Decimal
  discount   Decimal?
  sales_id   Int
  product_id Int

  Sales            Sales?             @relation(fields: [sales_id], references: [id])
  Products         Products?          @relation(fields: [product_id], references: [id])
  salesItemSerials SalesItemSerials[]
}

model SalesItemSerials {
  id           Int @id @default(autoincrement())
  salesItem_id Int
  serial_id    Int

  SalesItems     SalesItems     @relation(fields: [salesItem_id], references: [id])
  ProductSerials ProductSerials @relation(fields: [serial_id], references: [id])
}

model SalesReturn {
  id            Int      @id @default(autoincrement())
  returnNo      String   @unique
  total_payback Decimal
  note          String
  sales_id      Int
  user_id       Int
  customer_id   Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  Sales     Sales     @relation(fields: [sales_id], references: [id])
  Users     Users     @relation(fields: [user_id], references: [id])
  Customers Customers @relation(fields: [customer_id], references: [id])

  SalesReturnItems SalesReturnItems[]
}

model SalesReturnItems {
  id             Int     @id @default(autoincrement())
  quantity       Int
  unitPrice      Decimal
  product_id     Int
  salesReturn_id Int

  Products               Products?                @relation(fields: [product_id], references: [id])
  SalesReturn            SalesReturn?             @relation(fields: [salesReturn_id], references: [id])
  productSerials         ProductSerials?          @relation(fields: [productSerialsId], references: [id])
  productSerialsId       Int?
  salesReturnItemSerials SalesReturnItemSerials[]
}

model SalesReturnItemSerials {
  id                 Int @id @default(autoincrement())
  salesReturnItem_id Int
  serial_id          Int

  SalesReturnItems SalesReturnItems @relation(fields: [salesReturnItem_id], references: [id])
  ProductSerials   ProductSerials   @relation(fields: [serial_id], references: [id])
}

// Exchanges and related models
model Exchanges {
  id           Int      @id @default(autoincrement())
  exchangeNo   String   @unique
  totalPaid    Decimal
  totalPayback Decimal
  note         String
  sales_id     Int
  user_id      Int
  customer_id  Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  Sales     Sales?     @relation(fields: [sales_id], references: [id])
  Users     Users?     @relation(fields: [user_id], references: [id])
  Customers Customers? @relation(fields: [customer_id], references: [id])

  ExchangeItems ExchangesItems[]
}

model ExchangesItems {
  id            Int      @id @default(autoincrement())
  quantity      Int
  unitPrice     Decimal
  note          String
  // Product references
  oldProduct_id Int
  newProduct_id Int
  exchangeId    Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  oldProduct          Products?             @relation("OldProductExchangeItems", fields: [oldProduct_id], references: [id])
  newProduct          Products?             @relation("NewProductExchangeItems", fields: [newProduct_id], references: [id])
  Exchanges           Exchanges?            @relation(fields: [exchangeId], references: [id])
  exchangeItemSerials ExchangeItemSerials[]
}

model ExchangeItemSerials {
  id              Int @id @default(autoincrement())
  exchangeItem_id Int
  serial_id_old   Int
  serial_id_new   Int

  ExchangesItems    ExchangesItems @relation(fields: [exchangeItem_id], references: [id])
  OldProductSerials ProductSerials @relation("OldProductSerials", fields: [serial_id_old], references: [id])
  NewProductSerials ProductSerials @relation("NewProductSerials", fields: [serial_id_new], references: [id])
}

// Purchases and related models
model Purchases {
  id          Int      @id @default(autoincrement())
  purchaseNo  String   @unique
  totalAmount Decimal
  totalPaid   Decimal
  dueDate     DateTime
  note        String?
  supplier_id Int
  user_id     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  Suppliers Suppliers @relation(fields: [supplier_id], references: [id])
  Users     Users     @relation(fields: [user_id], references: [id])

  PurchasesItems  PurchasesItems[]
  PurchasesReturn PurchasesReturn[]
}

model PurchasesItems {
  id          Int     @id @default(autoincrement())
  quantity    Int
  unitPrice   Decimal
  purchase_id Int
  product_id  Int

  Purchases           Purchases             @relation(fields: [purchase_id], references: [id])
  Products            Products              @relation(fields: [product_id], references: [id])
  purchaseItemSerials PurchaseItemSerials[]
}

model PurchaseItemSerials {
  id              Int @id @default(autoincrement())
  purchaseItem_id Int
  serial_id       Int

  PurchasesItems PurchasesItems @relation(fields: [purchaseItem_id], references: [id])
  ProductSerials ProductSerials @relation(fields: [serial_id], references: [id])
}

model PurchasesReturn {
  id          Int      @id @default(autoincrement())
  returnNo    String   @unique
  totalPaid   Decimal
  note        String
  purchase_id Int
  user_id     Int
  supplier_id Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Purchases Purchases @relation(fields: [purchase_id], references: [id])
  Users     Users     @relation(fields: [user_id], references: [id])
  Suppliers Suppliers @relation(fields: [supplier_id], references: [id])

  PurchasesReturnItems PurchasesReturnItems[]
}

model PurchasesReturnItems {
  id                Int     @id @default(autoincrement())
  quantity          Int
  unitPrice         Decimal
  products_id       Int
  purchaseReturn_id Int

  Products                  Products                    @relation(fields: [products_id], references: [id])
  PurchasesReturn           PurchasesReturn             @relation(fields: [purchaseReturn_id], references: [id])
  purchaseReturnItemSerials PurchaseReturnItemSerials[]
}

model PurchaseReturnItemSerials {
  id                    Int @id @default(autoincrement())
  purchaseReturnItem_id Int
  serial_id             Int

  PurchasesReturnItems PurchasesReturnItems @relation(fields: [purchaseReturnItem_id], references: [id])
  ProductSerials       ProductSerials       @relation(fields: [serial_id], references: [id])
}

// Services and related models
model Services {
  id                 Int      @id @default(autoincrement())
  serviceNo          String   @unique
  serviceProductName String
  serviceDescription String
  serviceCost        Decimal
  serviceStatus      String
  customer_id        Int?
  user_id            Int?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @default(now())

  Customers Customers? @relation(fields: [customer_id], references: [id])
  Users     Users?     @relation(fields: [user_id], references: [id])
}
